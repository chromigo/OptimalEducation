@model IEnumerable<OptimalEducation.DAL.Models.EducationLineRequirement>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { educationLineId = ViewBag.EducationLineId })
</p>
<br/>
<p>Avaliable Sum: @ViewBag.AvaliableSum </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EducationLine.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExamDiscipline.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Requirement)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EducationLine.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExamDiscipline.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Requirement)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
    
</table>
