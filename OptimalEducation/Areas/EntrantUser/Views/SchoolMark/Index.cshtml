@model IList<OptimalEducation.DAL.Models.SchoolMark>

@{
    ViewBag.Title = "Index";
}

<h2>Результаты школьного аттестата</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    

    <div class="form-horizontal">
        @for (int i = 0; i < Model.Count(); i++)
        {
            @Html.ValidationSummary(true)
            @Html.HiddenFor(modelItem => Model[i].SchoolDisciplineId)
            <div class="form-group">
                @Html.LabelFor(modelItem => Model[i].Result, Model[i].SchoolDiscipline.Name, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(modelItem => Model[i].Result)
                    @Html.ValidationMessageFor(modelItem => Model[i].Result)
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="~/frontend/bundles/validation.js"></script>
}
