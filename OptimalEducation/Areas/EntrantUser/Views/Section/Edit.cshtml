@model OptimalEducation.DAL.Models.ParticipationInSection

@{
    ViewBag.Title = "Edit";
}

<h2>Редактировать</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Секция</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.SectionId, "Секция", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p>@Model.Section.Name</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.YearPeriod, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.YearPeriod)
                @Html.ValidationMessageFor(model => model.YearPeriod)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад к списку", "Index")
</div>
