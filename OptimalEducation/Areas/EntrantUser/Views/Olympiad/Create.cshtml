@model OptimalEducation.DAL.Models.ParticipationInOlympiad

@{
    ViewBag.Title = "Create";
}

<h2>Добавить</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Участие в олимпиаде</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.OlympiadId, "Олимпиада", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("OlympiadId", String.Empty)
                @Html.ValidationMessageFor(model => model.OlympiadId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Result, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(p=>p.Result)
                @Html.ValidationMessageFor(model => model.Result)
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад к списку", "Index")
</div>
