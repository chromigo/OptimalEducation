@model OptimalEducation.DAL.Models.ParticipationInSchool

@{
    ViewBag.Title = "Create";
}

<h2>Добавить</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Школа</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.SchoolId, "Школа", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SchoolId", String.Empty)
                @Html.ValidationMessageFor(model => model.SchoolId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.YearPeriod, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.YearPeriod)
                @Html.ValidationMessageFor(model => model.YearPeriod)
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад к списку", "Index")
</div>
