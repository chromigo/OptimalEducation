<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Optimal Education</title>
    <link href="@WebpackConfigWatcher.Assets.common.css" rel="stylesheet" />
    <script src="~/frontend/develop/googleAnalytics.universal.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-static-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Optimal Education", "Index", "Orientation", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li> @Html.ActionLink("Ориентация", "Index", "Orientation")</li>
                    <li>@Html.ActionLink("Рекомендации", "Index", "Recomendations")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Данные абитуриента<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("ЕГЭ", "Index", "UnitedStateExams")</li>
                            <li>@Html.ActionLink("Школьные оценки", "Index", "SchoolMark")</li>
                            <li>@Html.ActionLink("Олимпиады", "Index", "Olympiad")</li>
                            <li>@Html.ActionLink("Школы", "Index", "School")</li>
                            <li>@Html.ActionLink("Секции", "Index", "Section")</li>
                            <li>@Html.ActionLink("Хобби", "Index", "Hobbie")</li>
                        </ul>
                    </li>
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div id="footer">
        <div class="container">
            <p class="text-muted">&copy; @DateTime.Now.Year - Optimal Education</p>
        </div>
    </div>

    <script src="@WebpackConfigWatcher.Assets.common.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>